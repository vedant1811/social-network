<p id="notice"><%= notice %></p>

<%= image_tag @profile.photo_url, size: 200, class: 'center-cropped' %>

<p>
  <strong>Name:</strong>
  <%= @profile.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @profile.age %>
</p>

<p>
  <strong>Gender:</strong>
  <%= @profile.gender %>
</p>

<p>
  <strong>Location:</strong>
  <%= @profile.location %>
</p>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>


<h4>Friends</h4>

<%= render 'table', profiles: @profile.friends.take(1000) %>
